<!DOCTYPE html>
<html>
  {{template "htmlheader" .}}
  <body>
    {{template "header" .}}

    <div class="contents">
      {{if .Data}}
        <ul class="itemlist">
          {{range .Data}}
            <li>{{.Name}}
              <div class="right">
                <ul>
                  <li><a href="/settings/contents/{{.ID}}"><i class="material-icons">edit</i>編集</a></li>
                  <li><a href="/settings/contents/{{.ID}}/delete"><i class="material-icons">delete</i>削除</a></li>
                </ul>
              </div>
            </li>
          {{end}}
        </ul>
      {{end}}
    </div>
  </body>
</html>
